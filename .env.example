# Base path for the application
# For GitHub Pages with repository name: /traderview.github.io
# For custom domain: /
VITE_BASE_PATH=/traderview.github.io

# API Configuration
# Set this to your backend API URL
VITE_API_BASE_URL=http://localhost:3000/api

# Broker API Configuration
# Only API keys are needed on frontend - secrets are handled by backend
# Kite Connect - Get API key from https://kite.trade/apps/
VITE_KITE_API_KEY=your_kite_api_key_here

# Angel One - Get API key from https://smartapi.angelbroking.com/
VITE_ANGEL_API_KEY=your_angel_api_key_here

# Upstox - Get API key from https://upstox.com/developer/
VITE_UPSTOX_API_KEY=your_upstox_api_key_here

# Optional: Set to 'production' for production builds
NODE_ENV=development